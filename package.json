  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/*",
    "site"
  ],
  "scripts": {
    "build": "lerna run build --scope @pixels/*",
    "dev": "cd site && yarn dev",
    "format": "eslint . --ext .ts,.tsx --fix",
    "lint": "eslint . --ext .ts,.tsx && tsc",
    "size": "size-limit",
    "release": "yarn build && changeset publish",
    "test": "jest",
    "version": "changeset version && yarn"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@size-limit/preset-big-lib": "^5.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/dedent": "^0.7.0",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/prettier": "^2.3.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vanilla-extract/vite-plugin": "^1.1.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "css-loader": "^6.2.0",
    "eslint": "7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.9.0",
    "lerna": "^4.0.0",
    "mini-css-extract-plugin": "^2.2.0",
    "prettier": "^2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "size-limit": "^5.0.1",
    "ts-node": "^10.1.0",
    "typescript": "4.3.5",
    "vite": "^2.4.4",
    "webpack": "^5.50.0"
  }
}
