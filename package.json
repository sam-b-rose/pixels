{
  "name": "pixels",
  "private": true,
  "author": "Sam Rose <samrose3@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/*",
    "site"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn build:tokens && preconstruct build",
    "build:tokens": "manypkg run @pixels/tokens build",
    "dev": "manypkg run site dev",
    "format": "eslint . --ext .ts,.tsx --fix",
    "lint": "manypkg check && eslint . --ext .ts,.tsx && tsc",
    "postinstall": "preconstruct dev",
    "site:build": "manypkg run site build",
    "site:start": "manypkg run site start",
    "size": "size-limit",
    "release": "yarn build && changeset publish",
    "test": "jest",
    "version": "changeset version && yarn"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.0",
    "@size-limit/preset-big-lib": "^5.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/prettier": "^2.3.2",
    "@types/react": "17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.9.0",
    "goober": "^2.0.39",
    "goober-autoprefixer": "^1.2.1",
    "prettier": "^2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "size-limit": "^5.0.1",
    "ts-node": "^10.1.0",
    "typescript": "4.3.5"
  }
}
