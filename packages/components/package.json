{
  "name": "@pixels/components",
  "version": "0.0.0",
  "description": "Foundational components for building Shopify experiences.",
  "sideEffects": false,
  "main": "dist/pixels-components.cjs.js",
  "module": "dist/pixels-components.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pixels-components.es.js",
      "require": "./dist/pixels-components.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/pixels.git",
    "directory": "packages/components"
  },
  "author": "Shopify",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:js && yarn build:tsc",
    "build:js": "vite build",
    "build:tsc": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@styled-system/theme-get": "^5.1.2",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@pixels/tokens": "*",
    "@types/styled-system": "^5.1.12",
    "@types/styled-system__theme-get": "^5.0.1"
  },
  "peerDependencies": {
    "@pixels/tokens": "*",
    "goober": ">= 2.0.39",
    "react": ">= 17.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
