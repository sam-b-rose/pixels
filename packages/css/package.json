{
  "name": "@pixels/css",
  "version": "0.0.0",
  "description": "Atomic CSS and reset styles for building Shopify experiences.",
  "sideEffects": false,
  "main": "dist/pixels-css.cjs.js",
  "module": "dist/pixels-css.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pixels-css.es.js",
      "require": "./dist/pixels-css.cjs.js"
    },
    "./styles": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/pixels.git",
    "directory": "packages/css"
  },
  "author": "Shopify",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:js && yarn build:tsc",
    "build:js": "vite build",
    "build:tsc": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@pixels/themes": "*",
    "dedent": "^0.7.0"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
