{
  "name": "@pixels/tokens",
  "version": "0.0.0",
  "description": "Design tokens for building Shopify experiences.",
  "sideEffects": false,
  "main": "dist/pixels-tokens.cjs.js",
  "module": "dist/pixels-tokens.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pixels-tokens.es.js",
      "require": "./dist/pixels-tokens.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/pixels.git",
    "directory": "packages/tokens"
  },
  "author": "Shopify",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:tokens && yarn build:js && yarn build:tsc",
    "build:js": "vite build",
    "build:tokens": "ts-node scripts/build.ts",
    "build:tsc": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "watch": "vite build --watch"
  },
  "devDependencies": {
    "lodash": "^4.17.21",
    "tailwindcss": "^2.2.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
